# Base site URL used for OAuth redirects and callbacks.
# In development, this should match the frontend origin, e.g.:
# SITE_URL=http://localhost:5173
SITE_URL=http://localhost:5173

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# JWT Configuration for Convex Auth
JWT_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
JWKS={"keys":[{"use":"sig","kty":"RSA","n":"YOUR_PUBLIC_KEY_MODULUS_HERE","e":"AQAB"}]}

# Deployment used by `npx convex dev`
CONVEX_DEPLOYMENT=dev:your-convex-deployment-name

VITE_CONVEX_URL=https://your-convex-deployment.convex.cloud

# Convex site URL for production
CONVEX_SITE_URL=https://your-convex-deployment.convex.site

# Polar billing
POLAR_ORGANIZATION_TOKEN=your_polar_organization_token_here
POLAR_WEBHOOK_SECRET=your_polar_webhook_secret_here
# Optional: sandbox (default) or production
POLAR_SERVER=sandbox
POLAR_SUCCESS_URL=http://localhost:5173/payment/success?checkout_id={CHECKOUT_ID}

# Checkout links used by the frontend (no Polar product syncing)
VITE_CHECKOUT_LINK_WEEKLY=https://api.polar.sh/v1/checkout-links/YOUR_WEEKLY_LINK_ID/redirect
VITE_CHECKOUT_LINK_MONTHLY=https://api.polar.sh/v1/checkout-links/YOUR_MONTHLY_LINK_ID/redirect
VITE_CHECKOUT_LINK_QUARTERLY=https://api.polar.sh/v1/checkout-links/YOUR_QUARTERLY_LINK_ID/redirect
VITE_CHECKOUT_LINK_SEMIANNUAL=https://api.polar.sh/v1/checkout-links/YOUR_SEMIANNUAL_LINK_ID/redirect
VITE_CHECKOUT_LINK_LIFETIME=https://api.polar.sh/v1/checkout-links/YOUR_LIFETIME_LINK_ID/redirect

# Resend Email
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxx